{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!
{% endblock %}

{% block body %}
	<div id="wrapper">

		{% include "sidebar.html.twig" %}


		<!-- Content Wrapper -->
		<div
			id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				{% include "topbar.html.twig" %}


				<!-- Begin Page Content -->
				<div
					class="container-fluid">

					<!-- Page Heading -->

					<div class="d-sm-flex align-items-center justify-content-between mb-4">
						<h1 class="h3 mb-0 text-gray-800">Liste des Etudiants</h1>
						<a href="{{path('ajoutstudent')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
							<i class="fas fa-download fa-sm text-white-50"></i>
							Cr√©er</a>

						<a href="{{path('exportdata')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
							<i class="fas fa-download fa-sm text-white-50"></i>
							export-list</a>

						<a href="{{path('exportpdf')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">

							<i class="fas fa-download fa-sm text-white-50"></i>
							pdf_file</a>


					</div>


					<!-- Content Row -->

					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nom</th>
								<th scope="col">Prenom</th>
								<th scope="col">Poste</th>
							</tr>
						</thead>
						<tbody>
							{% for employe in listeemploye %}


								<tr>
									<th scope="row">{{ loop.index }}</th>

									<td>{{employe.nom}}</td>

									<td>{{employe.prenom}}</td>

									<td>{{employe.poste}}</td>


								</tr>
							{% endfor %}

						</tbody>
					</table>

				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Footer -->
			{% include "footer.html.twig" %}

			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>


{% endblock %}
