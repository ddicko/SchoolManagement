{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!
{% endblock %}

{% block body %}


	<!-- Page Wrapper -->
	<div id="wrapper">

		{% include "sidebar.html.twig" %}

		<!-- Content Wrapper -->
		<div
			id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				{% include "topbar.html.twig" %}

				<!-- Begin Page Content -->
				<div
					class="container-fluid">

					<!-- Page Heading -->
					<div class="d-sm-flex align-items-center justify-content-between mb-4">
						<h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
						<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
							<i class="fas fa-download fa-sm text-white-50"></i>
							Generate Report</a>
					</div>
					{% include "notifications.html.twig" %}

					{{ form_start(form) }}

					<!-- Content Row -->
					<div class="row">


						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.firstname) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.lastname) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.phonenumbers) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.age) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.address) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.siteweb) }}
						</div>

						<div class="col-xl-6 col-md-6 mb-4">
							{{ form_row(form.speciality) }}

						</div>


					</div>

					{{ form_end(form) }}


					<!-- Content Row -->

					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nom</th>
								<th scope="col">Prénom</th>
								<th scope="col">Numéro</th>
								<th scope="col">Age</th>
								<th scope="col">Adresse</th>
								<th scope="col">Site web</th>


							</tr>
						</thead>
						<tbody>
							{% for enseignant in listeenseignant %}

								<tr>
									<th scope="row">{{ loop.index }}</th>
									<td>{{enseignant.firstname}}</td>
									<td>{{enseignant.lastname}}</td>
									<td>{{enseignant.phonenumbers}}</td>
									<td>{{enseignant.age}}</td>
									<td>{{enseignant.address}}</td>
									<td>{{enseignant.siteweb}}</td>


								</tr>
							{% endfor %}

						</tbody>
					</table>


				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Footer -->
			{% include "footer.html.twig" %}
			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->
{% endblock %}
