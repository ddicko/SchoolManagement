{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!
{% endblock %}

{% block body %}
	<div id="wrapper">

		{% include "sidebar.html.twig" %}


		<!-- Content Wrapper -->
		<div
			id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				{% include "topbar.html.twig" %}


				<!-- Begin Page Content -->
				<div
					class="container-fluid">

					<!-- Page Heading -->
					<div class="d-sm-flex align-items-center justify-content-between mb-4">
						<h1 class="h3 mb-0 text-gray-800">Liste des Enseignants</h1>
						<a href="{{ path('ajoutenseignant')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
							<i class="fas fa-download fa-sm text-white-50"></i>
							Créer</a>
					</div>

					<!-- Content Row -->

					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nom</th>
								<th scope="col">Prénom</th>
								<th scope="col">Numéro</th>
								<th scope="col">Age</th>
								<th scope="col">Adresse</th>
								<th scope="col">Site web</th>


							</tr>
						</thead>
						<tbody>
							{% for enseignant in listeenseignant %}

								<tr>
									<th scope="row">{{ loop.index }}</th>
									<td>{{enseignant.firstname}}</td>
									<td>{{enseignant.lastname}}</td>
									<td>{{enseignant.phonenumbers}}</td>
									<td>{{enseignant.age}}</td>
									<td>{{enseignant.address}}</td>
									<td>{{enseignant.siteweb}}</td>


								</tr>
							{% endfor %}

						</tbody>
					</table>

				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Footer -->
			{% include "footer.html.twig" %}
			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>


{% endblock %}
