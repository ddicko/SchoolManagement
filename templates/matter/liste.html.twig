{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!
{% endblock %}

{% block body %}
	<div id="wrapper">

		{% include "sidebar.html.twig" %}


		<!-- Content Wrapper -->
		<div
			id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				{% include "topbar.html.twig" %}


				<!-- Begin Page Content -->
				<div
					class="container-fluid">

					<!-- Page Heading -->
					<div class="d-sm-flex align-items-center justify-content-between mb-4">
						<h1 class="h3 mb-0 text-gray-800">Liste des Matières</h1>
						<a href="{{path('ajoutmatter')}}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
							<i class="fas fa-download fa-sm text-white-50"></i>
							Créer</a>
					</div>

					<!-- Content Row -->

					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nom</th>
								<th scope="col">Hours</th>
								<th scope="col">Classe</th>
								<th scope="col">Montant</th>
								<th scope="col">Enseignant</th>


							</tr>
						</thead>
						<tbody>


							{% for matter in listematter %}
								<tr>
									<th scope="row">{{ loop.index }}</th>
									<td>{{matter.name}}</td>
									<td>{{matter.hours}}</td>
									<td>{{matter.classroom}}</td>
									<td>{{matter.amountPaidForMatter | number_format(0, '', ' ')}}</td>
									<td>
										{% for item in matter.enseignants %}
											{{item.firstname}}
										{% endfor %}
									</td>
								{% endfor %}


							</tr>
						</tbody>
					</tbody>
					<tfoot>
						<tr>
							<td colspan="3"></td>
							<td>Total:</td>
							<td>{{total| number_format(0, '', ' ')}}</td>
							Fcfa</tr>
					</tfoot>
				</td>
			</tr>
		</tfoot>
	</table>

</div>
<!-- /.container-fluid --></div><!-- End of Main Content --><!-- Footer -->{% include "footer.html.twig" %}<!-- End of Footer --></div><!-- End of Content Wrapper --></div>{% endblock %}
