{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!
{% endblock %}

{% block body %}


	<!-- Page Wrapper -->
	<div id="wrapper">

		{% include "sidebar.html.twig" %}

		<!-- Content Wrapper -->
		<div
			id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				{% include "topbar.html.twig" %}

				<!-- Begin Page Content -->
				<div
					class="container-fluid">

					<!-- Page Heading -->
					<div class="d-sm-flex align-items-center justify-content-between mb-4">
						<h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
						<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
							<i class="fas fa-download fa-sm text-white-50"></i>
							Generate Report</a>
					</div>
					{% include "notifications.html.twig" %}

					{{ form_start(form) }}

					<!-- Content Row -->
					<div class="row">


						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.name) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.hours) }}
						</div>
						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.classroom) }}
						</div>
						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.enseignants) }}
						</div>

						<div class="col-xl-3 col-md-6 mb-4">
							{{ form_row(form.amountPaidForMatter) }}
						</div>


						<div class="col-xl-3 col-md-6 mb-4">
							<button type="submit" class="btn btn-primary btn-lg">Cr√©er</button>

						</div>


					</div>

					{{ form_end(form) }}


					<!-- Content Row -->

					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nom</th>
								<th scope="col">Hours</th>
								<th scope="col">Classe</th>
								<th scope="col">Montant</th>
								<th scope="col">Enseignant</th>


							</tr>
						</thead>
						<tbody>


							{% for matter in matterliste %}

								<tr>
									<th scope="row">{{ loop.index }}</th>
									<td>{{matter.name}}</td>
									<td>{{matter.hours}}</td>
									<td>{{matter.classroom}}</td>
									<td>{{matter.amountPaidForMatter | number_format(0, '', ' ')}}</td>
									<td>
										{% for item in matter.enseignants %}
											{{item.firstname}}
										{% endfor %}
									</td>
								{% endfor %}


							</tr>
						</tbody>
					</tbody>

				</td>
			</tr>
		</tfoot>
	</table>


</div>
